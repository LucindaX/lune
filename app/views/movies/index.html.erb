<div class="container">
  <div class="mt-4 row justify-content-center">
    <div class="col-md-8">
      <form action="/" method="get">
        <div class="input-group mb-3">
          <input type="text" class="form-control" name="actor" placeholder="Searach By Actor Name">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row mt-4 justify-content-center">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Director</th>
            <th>Year</th>
            <th>Filming Locations</th>
            <th>Actors</th>
            <!-- Add more table headers as needed -->
          </tr>
        </thead>
        <tbody>
          <% @movies.each do |movie| %>
            <tr>
              <td><%= movie.name %></td>
              <td><%= movie.description %></td>
              <td><%= movie.director %></td>
              <td><%= movie.year %></td>
              <td><%= movie.filming_locations.map(&:to_s) %></td>
              <td><%= movie.actors.map(&:to_s) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
